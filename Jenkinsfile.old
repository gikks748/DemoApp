pipeline {
  agent any 
  tools {
    maven 'Maven'
  }
  stages {
    stage ('Initialize') {
      steps {
        sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
            ''' 
      }
    }
stage ('Check-Git-Secrets') {
      steps {
        sh 'rm trufflehog || true'
        sh 'docker run gesellix/trufflehog --json https://github.com/gikks748/DemoApp.git > trufflehog'
        sh 'cat trufflehog'
      }
    }
stage ('Build') {
      steps {
      sh 'mvn clean package'
       }
    }
stage ('Deploy-To-Tomcat') {
            steps {
           sshagent(['jenkins']) {
                sh 'scp -o StrictHostKeyChecking=no target/*.war ubuntu@52.206.7.62:/home/ubuntu/tomcat/apache-tomcat-9.0.84/webapps/webapp.war'
}
}
}
}
}
