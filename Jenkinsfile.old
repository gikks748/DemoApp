pipeline {
  agent any 
  tools {
    maven 'Maven'
  }
  stages {
    stage ('Initialize') {
      steps {
        sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
            ''' 
      }
    }
stage ('Check-Git-Secrets') {
      steps {
        sh 'rm trufflehog || true'
        sh 'docker run gesellix/trufflehog --json https://github.com/gikks748/DemoApp.git > trufflehog'
        sh 'cat trufflehog'
      }
    }

stage ('Source Composition Analysis') {
      steps {
         sh 'rm owasp* || true'
         sh 'wget "https://raw.githubusercontent.com/gikks748/DemoApp/master/owasp-dependency-check.sh" '
         sh 'chmod +x owasp-dependency-check.sh'
         sh 'bash owasp-dependency-check.sh'
         sh 'cat /var/lib/jenkins/workspace/demo-app-cicd/odc-reports/dependency-check-report.xml'
         
              }
    }

 stage ('SAST') {
      steps {
        withSonarQubeEnv('sonar') {
          sh 'mvn sonar:sonar'
          sh 'cat target/sonar/report-task.txt'
        }
      }
    }
stage ('Build') {
      steps {
      sh 'mvn clean package'
       }
    }
stage ('Deploy-To-Tomcat') {
            steps {
           sshagent(['jenkins']) {
                sh 'scp -o StrictHostKeyChecking=no target/*.war ubuntu@100.24.26.17:/home/ubuntu/tomcat/apache-tomcat-9.0.84/webapps/webapp.war'
}
}
}
}
}
